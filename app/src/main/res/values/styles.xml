<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--底部导航tab样式-->
    <style name="tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="summary_hint_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/divider</item>
        <item name="android:layout_marginBottom">@dimen/is4dp</item>
    </style>
</resources>
